# Global options
{
	admin off
	persist_config off
	auto_https off
	log {
		format json
	}
	servers {
		trusted_proxies static private_ranges
	}
}

(lb_settings) {
	lb_policy round_robin
	lb_retries 100
	lb_try_duration 10s
	lb_try_interval 250ms
}

(passive_health_checks) {
	fail_duration 60s
	max_fails 300
	unhealthy_latency 5s
	unhealthy_request_count 200
}

# Reusable backend reverse-proxy block
(backend_proxy) {
	reverse_proxy {
		dynamic a {
			name {$BACKEND_DOMAIN}
			port {$BACKEND_PORT}
			refresh 1s
			dial_timeout 30s
			versions ipv4 ipv6
		}
		import lb_settings
		import passive_health_checks
		header_up Host {upstream_hostport}
	}
}

# Reusable frontend reverse-proxy block
(frontend_proxy) {
	reverse_proxy {
		dynamic a {
			name {$FRONTEND_DOMAIN}
			port {$FRONTEND_PORT}
			refresh 1s
			dial_timeout 30s
			versions ipv4 ipv6
		}
		import lb_settings
		import passive_health_checks
		header_up Host {upstream_hostport}
	}
}

# Reusable S3 CDN reverse-proxy block
(s3_proxy) {
	reverse_proxy {
		to {$S3_BUCKET}.s3.{$S3_REGION:ap-southeast-1}.amazonaws.com:443
		transport http {
			tls
		}
		header_up Host {$S3_BUCKET}.s3.{$S3_REGION:ap-southeast-1}.amazonaws.com
		header_up X-Forwarded-Proto {scheme}
		header_up X-Forwarded-Host {host}
	}
}

# Main server
:{$PORT} {

	log {
		format json
	}

	handle {$BACKEND_PATH:/api}/* {
		import backend_proxy
	}

	handle /assets* {
		import backend_proxy
	}

	handle /dashboard* {
		import backend_proxy
	}

	handle /questions* {
		import backend_proxy
	}

	handle /auth* {
		import backend_proxy
	}

	handle /cdn/* {
		import s3_proxy
	}

	handle {
		import frontend_proxy
	}
}